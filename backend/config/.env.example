# Environment Configuration
DEBUG=True
API_HOST=0.0.0.0
API_PORT=8000

# Database
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=sentry_ai_explainer

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Sentry (Optional defaults - can be configured per workspace)
SENTRY_API_TOKEN=optional_default_sentry_api_token
SENTRY_ORG_SLUG=optional_default_sentry_organization_slug
SENTRY_BASE_URL=https://sentry.io/api/0

# Application Sentry (for monitoring this app itself)
APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
APP_SENTRY_ENVIRONMENT=development
APP_SENTRY_RELEASE=1.0.0
APP_SENTRY_TRACES_SAMPLE_RATE=0.1
APP_SENTRY_PROFILES_SAMPLE_RATE=0.1

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS
ALLOWED_ORIGINS=http://localhost:3000
